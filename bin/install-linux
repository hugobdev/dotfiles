#!/bin/sh

set -e

DOTFILES_DIR=$(dirname $( cd $(dirname $0) ; pwd -P ))

# repositories
# for peek
sudo add-apt-repository ppa:peek-developers/stable -y

# for timeshift
sudo add-apt-repository -y ppa:teejee2008/ppa

apt update

# Installs basic tools
apt-get install git vim tmux silversearcher-ag r-base-core python-pip -y

# Installs basic applications
apt-get install vlc kdenlive gimp transmission libreoffice timeshift peek -y

# Installs basic codecs
apt-get install libavcodec-extra ffmpeg -y

# Install tpm
if [ ! -d ~/.tmux/plugins/tpm ]; then
  git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm
fi

# Install tmuxp
sudo pip install --user tmuxp

# Install git prompt
if [ ! -d ~/.bash-git-prompt ]; then
  git clone https://github.com/magicmonty/bash-git-prompt.git ~/.bash-git-prompt --depth=1
fi
